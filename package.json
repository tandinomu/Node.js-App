{
  "scripts": {
    "test": "jest",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "./",
          "outputName": "junit.xml"
        }
      ]
    ]
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "jest-junit": "^16.0.0",
    "supertest": "^7.1.1"
  }
}
